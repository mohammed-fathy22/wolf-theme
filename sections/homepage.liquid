            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zM7.5 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
            </svg>
          </div>
          <h3 class="mt-4 text-lg font-semibold text-gray-900">24/7 Support</h3>
          <p class="mt-2 text-sm text-gray-600">Round-the-clock customer support to help you with any questions.</p>
        </div>
      </div>
    </div>
  </section>
{% endif %}

<!-- Newsletter Section -->
{% if section.settings.show_newsletter %}
  <section class="py-16 bg-gray-900">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
          {{ section.settings.newsletter_title | default: 'Stay Updated' }}
        </h2>
        <p class="mx-auto mt-4 max-w-2xl text-lg text-gray-300">
          {{
            section.settings.newsletter_description
            | default: 'Subscribe to our newsletter for the latest updates and exclusive offers.'
          }}
        </p>
      </div>

      <div class="mt-8 flex justify-center">
        <form class="flex w-full max-w-md gap-x-4" action="{{ routes.cart_url }}" method="post">
          <label for="email-address" class="sr-only">Email address</label>
          <input
            id="email-address"
            name="contact[email]"
            type="email"
            autocomplete="email"
            required
            class="min-w-0 flex-auto rounded-md border-0 bg-white px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-white/10 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-white sm:text-sm sm:leading-6"
            placeholder="Enter your email"
          >
          <button
            type="submit"
            class="flex-none rounded-md bg-white px-6 py-2 text-sm font-semibold text-gray-900 shadow-sm hover:bg-gray-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>
  </section>
{% endif %}

<!-- Schema.org JSON-LD for Website -->
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "{{ shop.name | escape }}",
    "url": "{{ shop.url }}",
    "description": "{{ shop.description | escape }}",
    "potentialAction": {
      "@type": "SearchAction",
      "target": "{{ shop.url }}/search?q={search_term_string}",
      "query-input": "required name=search_term_string"
    }
  }
</script>


<!-- Hero Section -->
<section class="relative bg-gradient-to-r from-blue-600 to-purple-700 text-white">
  <div class="absolute inset-0 bg-black opacity-20"></div>
  <div class="relative mx-auto max-w-7xl px-4 py-24 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl font-bold tracking-tight sm:text-6xl">
        {{ section.settings.hero_title | default: 'Welcome to ' | append: shop.name }}
      </h1>
      <p class="mx-auto mt-6 max-w-2xl text-lg leading-8 text-blue-100">
        {{
          section.settings.hero_description
          | default: 'Discover amazing products and exceptional quality. Shop with confidence and enjoy fast, reliable delivery.'
        }}
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a
          href="{{ section.settings.hero_button_url | default: collections.all.url }}"
          class="rounded-md bg-white px-6 py-3 text-sm font-semibold text-gray-900 shadow-sm hover:bg-gray-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
        >
          {{ section.settings.hero_button_text | default: 'Shop Now' }}
        </a>
        <a
          href="{{ section.settings.hero_secondary_button_url | default: pages.about.url }}"
          class="text-sm font-semibold leading-6 text-white hover:text-blue-100"
        >
          {{ section.settings.hero_secondary_button_text | default: 'Learn more' }}
          <span aria-hidden="true">â†’</span>
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Featured Collections -->
{% if section.settings.show_featured_collections %}
  <section class="py-16 bg-gray-50">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
          {{ section.settings.featured_collections_title | default: 'Shop by Category' }}
        </h2>
        <p class="mx-auto mt-4 max-w-2xl text-lg text-gray-600">
          {{ section.settings.featured_collections_description | default: 'Explore our curated collections' }}
        </p>
      </div>

      <div class="mt-12 grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {% for collection in collections limit: 6 %}
          {% unless collection.handle == 'all' %}
            <div class="group relative">
              <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-lg bg-gray-200 lg:aspect-none group-hover:opacity-75 lg:h-80">
                {% if collection.image %}
                  <img
                    src="{{ collection.image | image_url: width: 400 }}"
                    alt="{{ collection.title | escape }}"
                    class="h-full w-full object-cover object-center lg:h-full lg:w-full"
                    width="400"
                    height="320"
                    loading="lazy"
                  >
                {% else %}
                  <div class="flex h-full w-full items-center justify-center bg-gray-200">
                    <span class="text-4xl text-gray-400">{{ collection.title | first }}</span>
                  </div>
                {% endif %}
              </div>
              <div class="mt-4 flex justify-between">
                <div>
                  <h3 class="text-lg font-medium text-gray-900">
                    <a href="{{ collection.url }}">
                      <span aria-hidden="true" class="absolute inset-0"></span>
                      {{ collection.title }}
                    </a>
                  </h3>
                  <p class="mt-1 text-sm text-gray-500">{{ collection.products_count }} products</p>
                </div>
              </div>
            </div>
          {% endunless %}
        {% endfor %}
      </div>
    </div>
  </section>
{% endif %}

<!-- Featured Products -->
{% if section.settings.show_featured_products %}
  <section class="py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
          {{ section.settings.featured_products_title | default: 'Featured Products' }}
        </h2>
        <p class="mx-auto mt-4 max-w-2xl text-lg text-gray-600">
          {{ section.settings.featured_products_description | default: 'Check out our best-selling items' }}
        </p>
      </div>

      <div class="mt-12 grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
        {% for product in collections[section.settings.featured_collection].products limit: 8 %}
          <div class="group relative">
            <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-lg bg-gray-200 lg:aspect-none group-hover:opacity-75 lg:h-80">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 300 }}"
                  alt="{{ product.title | escape }}"
                  class="h-full w-full object-cover object-center lg:h-full lg:w-full"
                  width="300"
                  height="240"
                  loading="lazy"
                >
              {% else %}
                <div class="flex h-full w-full items-center justify-center bg-gray-200">
                  <span class="text-4xl text-gray-400">No Image</span>
                </div>
              {% endif %}
            </div>
            <div class="mt-4 flex justify-between">
              <div>
                <h3 class="text-sm text-gray-700">
                  <a href="{{ product.url }}">
                    <span aria-hidden="true" class="absolute inset-0"></span>
                    {{ product.title }}
                  </a>
                </h3>
                <p class="mt-1 text-sm font-medium text-gray-900">
                  {% if product.compare_at_price > product.price %}
                    <span class="text-red-600">{{ product.price | money }}</span>
                    <span class="ml-2 text-sm text-gray-500 line-through">{{ product.compare_at_price | money }}</span>
                  {% else %}
                    {{ product.price | money }}
                  {% endif %}
                </p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      <div class="mt-12 text-center">
        <a
          href="{{ collections.all.url }}"
          class="inline-flex items-center rounded-md border border-transparent bg-gray-900 px-6 py-3 text-base font-medium text-white shadow-sm hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2"
        >
          View All Products
        </a>
      </div>
    </div>
  </section>
{% endif %}

